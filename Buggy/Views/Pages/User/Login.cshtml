@{
	Layout = "~/Views/Shared/LoginLayout.cshtml";
	ViewBag.Title = "User Login";
}

<div id="LoginContainer" class="container">
		
	<div class="row-fluid">
		<div id="LoginFormArea" class="span6 offset3">
			<div class="inner">
				<div class="row-fluid">
					<div class="span10 offset1">
						<h1>LoginToBuggy</h1>
					</div>
				</div>
		
				<div class="row-fluid">
					<div class="span10 offset1">
						<form id="LoginForm" class="form-inline">
							<input id="UserLogin" type="text" placeholder="Login" />
							<input id="Password" type="password" placeholder="Password" />
							<label class="checkbox">
								<input id="RememberMe" type="checkbox" /> Remember me
							</label>
							<button id="DoLogin" class="btn btn-large btn-block btn-primary" type="submit">Do it!</button>
							<button id="DoRegister" class="btn btn-large btn-block btn-info" type="button">Register as New User</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>